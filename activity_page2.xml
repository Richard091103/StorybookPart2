<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@drawable/page2"
    tools:context=".page2">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginBottom="150dp">

        <TextView
            android:layout_width="310dp"
            android:layout_height="wrap_content"
            android:text="Once upon a time, in a"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#96A9E3"
            android:layout_marginBottom="200dp"
            android:gravity="center"/>

        <EditText
            android:id="@+id/pangalan"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:hint="fill the blank"
            android:background="#7A8CED"
            android:textColorHint="#FFFFFF"
            android:layout_marginTop="-195dp"
            android:padding="10dp"
            android:gravity="center"/>

        <TextView
            android:layout_width="310dp"
            android:layout_height="wrap_content"
            android:text="castle, there was a young"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#96A9E3"
            android:layout_marginTop="5dp"
            android:hint="fill the blank"
            android:gravity="center"/>

        <EditText
            android:id="@+id/pangalan1"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:hint="fill the blank"
            android:background="#7A8CED"
            android:textColorHint="#FFFFFF"
            android:layout_marginTop="5dp"
            android:padding="10dp"
            android:gravity="center"/>

        <TextView
            android:layout_width="310dp"
            android:layout_height="wrap_content"
            android:text="named"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#96A9E3"
            android:layout_marginTop="5dp"
            android:gravity="center"/>

        <EditText
            android:id="@+id/pangalan2"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:hint="fill the blank"
            android:background="#7A8CED"
            android:textColorHint="#FFFFFF"
            android:layout_marginTop="5dp"
            android:padding="10dp"
            android:gravity="center"/>

    </LinearLayout>

</LinearLayout>